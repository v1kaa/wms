<UserControl x:Class="WMS.views.admin_page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WMS.views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<ListBox x:Name="NavigationListBox" SelectionChanged="NavigationListBox_SelectionChanged">
			<ListBoxItem Content="Warehouses management" Tag="Warehouses management"/>
			<ListBoxItem Content="Workers" Tag="Workers"/>
			<ListBoxItem Content="Suppliers" Tag="Suppliers"/>
			<ListBoxItem Content="Products management" Tag="Products"/>
			<ListBoxItem Content="Create orders export" Tag="OrdersExport"/>
			<ListBoxItem Content="All orders for export" Tag="AllOrdersForExport"/>
		</ListBox>
		<ContentControl x:Name="MainContentControl" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
	</Grid>
</UserControl>
